{
    "compilerOptions": {
        "target": "es2017",
        "lib": [
            "es2017",
            "esnext.asynciterable"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "sourceMap": true,
        //"outDir": "./build",
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}